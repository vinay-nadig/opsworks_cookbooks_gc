defaults: &defaults
  host: <%= node['deploy']['gamecraft-api']['rabbitmq']['host'] %>
  vhost: '/'
  user: <%= node['deploy']['gamecraft-api']['rabbitmq']['user'] %>
  password: <%= node['deploy']['gamecraft-api']['rabbitmq']['password'] %>
  port: <%= node['deploy']['gamecraft-api']['rabbitmq']['port'] %>

development:
  <<: *defaults
  exchanges:
    model_notifier: 'model-notifier-dev'

test:
  <<: *defaults
  exchanges:
    model_notifier: 'model-notifier-test'

staging:
  <<: *defaults
  exchanges:
    model_notifier: 'model-notifier-stage'

production:
  <<: *defaults
  exchanges:
    model_notifier: 'model-notifier'
